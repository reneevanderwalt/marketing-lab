---
import { getCollection, render } from 'astro:content';
import DefaultLayout from '@layouts/DefaultLayout.astro';
import PageHeader from '@components/PageHeader.astro';
import SocialShares from '@components/SocialShares.astro';
import { Badge } from 'accessible-astro-components'
import CallToAction from '@components/CallToAction.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map(post => ({
    params: { slug: post.id }, props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<DefaultLayout title={post.data.title} description={post.data.description} url={post.data.title}>
  <PageHeader
    title={post.data.title}
    subtitle={post.data.description}
    bgType="bordered"
    featuredImage={post.data.image.url}
  >
    <div class="tags-section">
      <div class="tags-container">
        {post.data.tags.map((tag) => (
          <Badge type="default" size="lg"><a href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}>{tag}</a></Badge>
        ))}
      </div>
    </div>
  </PageHeader>

  <section class="my-12">
    <div class="narrow space-content container">
      <Content />
    </div>
  </section>
  <section class="my-12">
    <div class="narrow space-content container">
      <h2>Share this blog</h2>
      <p>Like this blog? Share it with your network!</p>
      <SocialShares />
    </div>
  </section>
<CallToAction/>
</DefaultLayout>

<style>
  .tags-section {
    margin-top: 1rem;
  }
  
  .tags-container {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

</style>